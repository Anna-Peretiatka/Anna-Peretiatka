                    label(for="KosherBox") כשר
                li
                    input#notKosherBox(type="checkbox", name="hashtag", value="notKosher")
                    label(for="notKosherBox") לא כשר
                li
                    input#healthyBox(type="checkbox", name="hashtag", value="healthy")
                    label(for="healthyBox") בריא
                li
                    input#mushhatBox(type="checkbox", name="hashtag", value="mushhat")
