block insideContent
    .contentItem.Filter
        h3.h3ExtraFilter סינון נוסף
        .filterBar
            label(dir="rtl",for="citySearch") מיקום
            input.searchCity(id="citySearch",dir="rtl",name="citySearch", type="text",value=userAddress, required)
            //-input.searchCity(id="citySearch",dir="rtl",name="citySearch", type="text", required)
            input#userAddress(type='hidden')
            input#cityLat(type="hidden", name="cityLat")
            input#cityLng(type="hidden", name="cityLat")
        .filterBar
            input#myRange.slider(type="range", min="0.1", max="50", value="0.5")
            label(for="myRange")
